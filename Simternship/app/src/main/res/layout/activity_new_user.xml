<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newUserLayOut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csc309.simternship.NewUser">

    <EditText
        android:id="@+id/fillFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/fillPassword"
        app:layout_constraintStart_toStartOf="@+id/fillPassword"
        app:layout_constraintTop_toBottomOf="@+id/fillPassword" />

    <EditText
        android:id="@+id/fillLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/fillFirstName"
        app:layout_constraintStart_toStartOf="@+id/fillFirstName"
        app:layout_constraintTop_toBottomOf="@+id/fillFirstName" />

    <NumberPicker
        android:id="@+id/difficultyPicker"
        android:layout_width="128dp"
        android:layout_height="83dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/fillLastName"
        app:layout_constraintStart_toStartOf="@+id/fillLastName"
        app:layout_constraintTop_toBottomOf="@+id/fillLastName" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:onClick="onClickSignUp"
        android:text="Begin Your Adventure"
        app:layout_constraintEnd_toEndOf="@+id/difficultyPicker"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/difficultyPicker"
        app:layout_constraintTop_toBottomOf="@+id/difficultyPicker" />

    <EditText
        android:id="@+id/fillEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fillPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textVisiblePassword"
        app:layout_constraintEnd_toEndOf="@+id/fillEmail"
        app:layout_constraintStart_toStartOf="@+id/fillEmail"
        app:layout_constraintTop_toBottomOf="@+id/fillEmail" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="lower number is easier diffculty"
        app:layout_constraintEnd_toEndOf="@+id/difficultyPicker"
        app:layout_constraintStart_toStartOf="@+id/difficultyPicker"
        app:layout_constraintTop_toBottomOf="@+id/difficultyPicker" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="Set Difficulty of the game"
        app:layout_constraintBottom_toTopOf="@+id/difficultyPicker"
        app:layout_constraintStart_toStartOf="@+id/fillLastName" />

</android.support.constraint.ConstraintLayout>
